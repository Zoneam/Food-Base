<%- include('../partials/header') %>

    <div id="recepies-wrapper">
      <% recepies.forEach(recipe=>{ %>
        <div class="card" style="width: 18rem;">
        <form action="/recepies/<%= recipe.id %>?_method=DELETE"
          class="delete-form" method="POST">
        <button class="close-btn btn btn-danger" type="submit">X</button>
       </form>
            <form class="row g-3" action="/recepies/save" method="POST">
              <img src="<%= recipe.picture %>" class="card-img-top" name="picture" alt="..."><input name="picture" value="<%= recipe.picture %>" hidden="true">
              <div class="card-body">
                <h5 class="card-title" ><input name="name" value="<%= recipe.name %>" hidden="true"><%= recipe.name %></h5>
                <p class="card-text" name="calories"><input name="calories" value="<%= recipe.calories %>" hidden="true"><%= Math.floor(recipe.calories) %> Calories</p>
                <a href="<%= recipe.link %>" class="btn btn-primary" target="_blank" >Open</a>
                <button type="submit"  class="btn btn-success">Edit</button>
              </div>
            </div>
          </form>
      <% }) %>
      </div>
  </body>
</html>
